                   , authenticate-kerberos   >= 1.0       && < 1.1
                   , yesod-core              >= 1.4       && < 2.0
                   , yesod-auth              >= 1.4       && < 2.0
                   , yesod-form              >= 1.4       && < 2.0
                   , bytestring              >= 0.9.1.4   && < 0.11
                   , shakespeare             >= 2.0       && < 2.1
                   , text                    >= 0.7       && < 2.0
                   , transformers            >= 0.2.2     && < 0.4

    exposed-modules: Yesod.Auth.Kerberos
    ghc-options:     -Wall

source-repository head
  type:     git
  location: https://github.com/Tarrasch/yesod-auth-kerberos
